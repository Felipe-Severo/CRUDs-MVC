@model VehiclesModel
@{
    ViewData["Title"] = "Veículos";
}
<div class="text-center">
    <h3>Lista de veículos</h3>
    <a type="button" class="btn btn-primary float-end" asp-controller="Vehicles" asp-action="Add">Incluir novo veículo</a>
    <table class="table table-hover">
        <thead class="text-light">
            <tr>
                <th> class="text-center"ID</th>
                <th class="text-center">Tipo de veículo</th>
                <th class="text-center">Marca</th>
                <th class="text-center">Modelo</th>
                <th class="text-center">Ano</th>
                <th class="text-center">Placa</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var vehicle in Model.Vehicles)
            {
                <tr>
                    <td class="text-light bg-dark">@vehicle.Id</td>
                    <td class="text-light bg-dark">@vehicle.VehicleType.ToString()</td>
                    <td class="text-light bg-dark">@vehicle.VehicleBrand.ToString()</td>
                    <td class="text-light bg-dark">@vehicle.VehicleName</td>
                    <td class="text-light bg-dark">@vehicle.SelectedYear</td>
                    <td class="text-light bg-dark">@vehicle.LicensePlate</td>
                    <td>
                        <div>
                            <a type="button" class="btn btn-warning" asp-route-id="@vehicle.Id" asp-controller="Vehicles" asp-action="Update">Editar</a>
                            <a type="button" class="btn btn-danger" asp-route-id="@vehicle.Id" asp-controller="Vehicles" asp-action="Delete">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>