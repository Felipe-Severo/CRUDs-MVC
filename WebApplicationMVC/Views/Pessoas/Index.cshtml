@model PessoasModel
@{
    ViewData["Title"] = "People";
}
<div class="text-center">
    <h3>People</h3>
    <a type="button" class="btn btn-primary float-end" asp-controller="Pessoas" asp-action="Add">New</a>
    <table class="table table-hover">
        <thead class="text-light">
            <tr>
                <th class="text-center">ID</th>
                <th class="text-center">Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pessoa in Model.Pessoas)
            {
                <tr>
                    <td class="text-light bg-dark">@pessoa.Id</td>
                    <td class="text-light bg-dark">@pessoa.Nome</td>
                    <td>
                        <div>
                            <a type="button" class="btn btn-warning mx-2 px-5" asp-route-id="@pessoa.Id" asp-controller="Pessoas" asp-action="Update">Editar</a>
                            <a type="button" class="btn btn-danger mx-2 px-5" asp-route-id="@pessoa.Id" asp-controller="Pessoas" asp-action="Delete">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>