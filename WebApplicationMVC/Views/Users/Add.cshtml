@model UserModel
@{
    ViewData["Title"] = "Usuário";
}
<div>
    <h3>Cadastro de usuário</h3>
    <form asp-controller="Users" asp-action="Add" method="post">
        <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" id="name" class="form-control" asp-for="Name"/>
        </div>
        <div class="form-group">
            <label for="nickname">Nickname</label>
            <input type="text" id="nickname" class="form-control" asp-for="Nickname" />
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" id="email" class="form-control" asp-for="Email" />
        </div>
        <div class="form-group">
            <label for="password">Senha</label>
            <input type="password" id="password" class="form-control" asp-for="Password" />
        </div>
        <div class="form-group">
            <label for="accessType">Tipo de acesso</label>
            <select id="accessType" class="form-select" asp-for="AccessType">
                <option value="0">Adm</option>
                <option value="1">Student</option>
                <option value="2">Teacher</option>
            </select>
        </div>

        <br />
        <button type="submit" class="btn btn-primary float-end">Salvar</button>
        <a class="btn btn-secondary float-end" asp-controller="Users" asp-action="Index">Voltar</a>
    </form>
</div>